{% extends "base.html.twig" %}

{#{% form_theme form 'bootstrap_4_layout.html.twig' %}#}

{% block body %}
    <h4 class="text-center">Admin</h4>
    <p class="text-center mb-0">Bonjour <span style="font-style: oblique ">{{ user.email }} !</span></p>
    <div class="d-flex justify-content-center">
        <button class="btn btn-info text-center mb-2">
            <a href="{{path('homepage')}}" style="text-decoration:none;color: white;">retour</a>
        </button>
    </div>
    <div class="text-center" style="border: black solid 1px; margin-left: 5%;margin-right: 5%">
    <h5 style="border-bottom: #5a01a7 solid 1px;">ARTICLES</h5>
    {% for article in articles %}
        <p class="inline mb-2">{{ article.title }}</p>
        <a class="btn btn-primary" href="{{path('article_delete', { id : article.id }) }}" onclick="deleteAlert()">del</a>
    {% endfor %}
    </div>




    <script>
        function deleteAlert() {
            if (confirm("Etes-vous s√ªr de supprimer cet article ?") === true) {
                return true;
            } else {
                event.stopPropagation();
                event.preventDefault();
            }
        }
    </script>
{% endblock %}