{% extends "base.html.twig" %}

{#{% form_theme form 'bootstrap_4_layout.html.twig' %}#}

{% block body %}
    <h4 class="text-center">Admin</h4>
    <p class="text-center mb-0">Bonjour <span style="font-style: oblique; font-size: large">{{ user.email }} !</span></p>
    <div class="d-flex justify-content-center">
        <button class="btn btn-dark text-center mt-2 mb-2">
            <a href="{{path('homepage')}}" style="text-decoration:none;color: white;">acceuil</a>
        </button>
    </div>
    <div id="calli" class="text-center" style="border: black solid 1px; margin-left: 5%;margin-right: 5%;">
        <h5>ARTICLES</h5>
        {% for article in articles %}
            <div class="card text-center mb-3" style="max-width: 20%;margin-left: auto;margin-right: auto;">
                <p class="mb-1">{{ article.title }}</p>
                <img class="mb-3" style="margin-left: auto;margin-right: auto;" width="270" height="300" src="{{ asset('uploads/' ~ article.image) }}" alt="avion"/>
                <p class="mb-1" style="color: gray">Nombre de vues : {{ article.view }}</p>
                <a class="btn btn-primary" href="{{path('article_delete', { id : article.id }) }}" onclick="deleteAlert()">supprimer</a>
            </div>
        {% endfor %}
    </div>

    <script>
        function deleteAlert() {
            if (confirm("Etes-vous s√ªr de supprimer cet article ?") === true) {
                return true;
            } else {
                event.stopPropagation();
                event.preventDefault();
            }
        }
    </script>
{% endblock %}