{% extends 'base.html.twig' %}

{% block header %}

{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h3 class="text-center">Bienvenu sur l'espace connexion</h3>

    <div class="text-center mt-4">
    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

{#         If you want to control the URL the user is redirected to on success#}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="logboutton btn btn-success" type="submit">connexion</button>

        <input type="hidden" name="_target_path" value="/login_success"/>

    </form>
    </div>
    
    <div class="text-center mt-3">
        <img style="border-radius: 20%;box-shadow: 0px 0px 4px 4px rgb(0,0,0);" src="https://imgs.search.brave.com/3Mp79r0-BNkM_RWQdR8KQe9G-RMaUuNbMyB5xyg-ryE/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5nZXR0eWltYWdl/cy5jb20vaWQvMTM0/MTQxMTI5MC9mci9w/aG90by9oYWNrZXIu/anBnP3M9NjEyeDYx/MiZ3PTAmaz0yMCZj/PTN2R1JGSno0OExK/aU1QMk5IR04tR29E/YUN6dXlRbkJ1bUpO/VXUzWUtqZnM9" alt="">
