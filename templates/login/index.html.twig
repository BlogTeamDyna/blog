{% extends 'base.html.twig' %}


{% block body %}
<div id="" class="m-3" style="max-height: 100%;">
    <h1 class="text-center" style="margin-top: 3em; font-family: 'Workbench',sans-serif">ESPACE DE CONNEXION</h1>

    <div class="text-center mt-4" style="width: 30%; margin-left: auto; margin-right: auto">
    <form style="display: flex; justify-content: center; flex-direction: column; margin-top: 5em;" action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

{#         If you want to control the URL the user is redirected to on success#}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="logboutton btn btn-dark mt-2 mb-2" type="submit">connexion</button>

        <input type="hidden" name="_target_path" value="/login_success"/>

    </form>
    </div>

</div>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


{% endblock %}
