<!DOCTYPE html>
<html lang="">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
            {{ encore_entry_link_tags('app') }}
		<link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.1/dist/sandstone/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="{{ asset('css/theme.css') }}">
		{% block javascripts %}{% endblock %}
            {{ encore_entry_script_tags('app') }}
	</head>
	<body>
		<div id="notify">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="btn btn-success d-flex justify-content-center">
						<div style="text-align: center; color: greenyellow;" class="flash-{{ label }}">
							{{ message }}
						</div>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
		<header class="bg-light border border-success-subtle">
			<a href="/" style="justify-content: center">
				<img class="" src="{{ asset('uploads/Camera-64e70fc6166bc.png') }}" alt="" style="float: left; ">
			</a>
			<h1 id="font" class="text-center p-3 m-0 ">The Blog</h1>
		</header>
		{% block body %}{% endblock %}
		<footer>
			<div class="bg-light border border-success-subtle" style="margin-bottom: 0">
				<div id="font" class="text-center pt-3"><h4>Merci de votre visite et à bientot !</h4></div>
				<div id="font" class="text-center">Tous droits réservés(r)</div>
			</div>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
		<script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
		<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

		<script>
			setTimeout(()=> {
				let notif = document.getElementById("notify");
				notif.style.display = 'none';
			}, 3000);
		</script>
	</body>
</html>
